{
    "name": "ruTorrent",
    "id": "rutorrent",
    "packaging_format": 1,
    "description": {
        "en": "Torrent client",
        "fr": "Client torrent"
    },
    "version": "1.0~ynh3",
    "license": " GPL-3.0",
    "url": "https://github.com/Novik/ruTorrent",
    "maintainer": {
        "name": "Patatra",
        "email": "patatra@gmail.com"
    },
    "requirements": {
        "yunohost": ">= 3.8.1"
    },
    "multi_instance": false,
    "services": [
    	"nginx",
    	"php7-fpm"
	],
    "arguments": {
        "install": [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for ruTorrent",
                    "fr": "Choisissez un domaine pour ruTorrent"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for ruTorrent",
                    "fr": "Choisissez un chemin pour ruTorrent"
                },
                "example": "/rutorrent",
                "default": "/rutorrent"
            },
            {
                "name": "password",
                "type": "password",
                "ask": {
                    "en": "Choose a password for the rtorrent system user",
                    "fr": "Choisissez un mot de passe pour l'utilisateur syst√®me rtorrent"
                },
                "example": "mysecret"
            }
        ]
    }
}
