{
    "name": "ruTorrent",
    "id": "rutorrent",
    "packaging_format": 1,
    "description": {
        "en": "Torrent client",
        "fr": "Client torrent"
    },
    "version": "1.0.0~ynh1",
    "license": " GPL-3.0-or-later",
    "url": "https://github.com/Patatra/rutorrent_ynh",
    "maintainer": {
        "name": "yolateng0 ",
        "email": "yolateng0@yolateng0.nohost.me"
    },
    "requirements": {
        "yunohost": ">= 4.0.0"
    },
    "multi_instance": false,
    "services": [
    	"nginx",
    	"php7-fpm"
	],
    "arguments": {
        "install": [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for ruTorrent",
                    "fr": "Choisissez un domaine pour ruTorrent"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for ruTorrent",
                    "fr": "Choisissez un chemin pour ruTorrent"
                },
                "example": "/rutorrent",
                "default": "/rutorrent"
            },
            {
                "name": "data_dir",
                "type": "path",
                "ask": {
                    "en": "Choose a folder to store the downloads",
                    "fr": "Choisissez un dossier pour sauver les telechargements"
                },
                "example": "/mnt/disk1/torrents",
                "default": "/home/rtorrent"
            },
            {
                "name": "password",
                "type": "password",
                "ask": {
                    "en": "Choose a password for the rtorrent system user",
                    "fr": "Choisissez un mot de passe pour l'utilisateur syst√®me rtorrent"
                },
                "example": "mysecret"
            }
        ]
    }
}
